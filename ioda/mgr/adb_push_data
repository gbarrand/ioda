#!/bin/sh -f

#/////////////////////////////////////////////////////////////
#/////////////////////////////////////////////////////////////
#/////////////////////////////////////////////////////////////

from=/Users/barrand/Documents/ioda

files=""

#/////////////////////////////////////////////////////////////
#/// files from to_device ////////////////////////////////////
#/////////////////////////////////////////////////////////////

/bin/rm -f tmp_0
find ${from}/to_device -name '*' -print > ./tmp_0
for file in $(cat ./tmp_0) ; do
  files="${files} ${file}"
done
/bin/rm -f tmp_0

#/////////////////////////////////////////////////////////////
#/// other files /////////////////////////////////////////////
#/////////////////////////////////////////////////////////////
#files=""
#files="${files} ${from}/pmx/00001634_00000512_5.dst"
#files="${files} ${from}/LHCb_00001634_00000512_5.root"
#files="${files} ${from}/lhcbfull.root"
#files="${files} ${from}/lhcb.vds"
#files="${files} ${from}/NTUP_SUSY01LEP.571933._000002.root.1"

#echo ${files}
#exit

#/////////////////////////////////////////////////////////////
#/////////////////////////////////////////////////////////////
#/////////////////////////////////////////////////////////////
for file in ${files} ; do
  adb push ${file} /sdcard/Android/data/fr.in2p3.lal.ioda/.
done

