#ifndef inlib_edep_cids
#define inlib_edep_cids

#include "../cid"

namespace inlib {
namespace edep {

///////////////////////////////////////////////////
///////////////////////////////////////////////////
///////////////////////////////////////////////////
inline cid solid_cid()     {return 1000;}

inline cid box_cid()      {return solid_cid()+1;}
inline cid tubs_cid()     {return solid_cid()+2;}
inline cid trap_cid()     {return solid_cid()+3;}
inline cid cone_cid()     {return solid_cid()+4;}
inline cid trd_cid()      {return solid_cid()+5;}
inline cid pcon_cid()     {return solid_cid()+6;}

inline cid boolean_cid()  {return solid_cid()+20;}

///////////////////////////////////////////////////
///////////////////////////////////////////////////
///////////////////////////////////////////////////
}}

#endif
